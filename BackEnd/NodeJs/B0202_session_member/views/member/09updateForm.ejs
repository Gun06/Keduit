
	
	<%- include("01memberHeader.ejs") %>
	<div align="center">
		<h1>회원정보 수정</h1>
		<form method="post" action="updatePro">
			<table border="1">
				<tr>
					<td>번호</td>
					<td ><input type="text" name="no" value="<%= member.memberNo %>" readonly ></td>
				</tr>
			
				<tr>
					<td>아이디</td>
					<td ><input type="text" name="id" value="<%= member.memberId %>" readonly ></td>
				</tr>
				<tr>
					<td>패스워드</td>
					<td><input type="password" name="pw" value="<%= member.memberPw %>" style="background: yellow" ></td>				
				</tr>
				<tr>
					<td>이름</td>
					<td><input type="text" name="name" value="<%= member.memberName %>" style="background: yellow"></td>				
				</tr>
				<tr>
					<td>성별</td>
					<td style="background: yellow">
					<%
						if(member.memberGender == ("남")) {
					%>
						<input type="radio" name="gender" value="남" checked="checked">남
						<input type="radio" name="gender" value="여">여
					<%
						} else {
					%>
						<input type="radio" name="gender" value="남">남
						<input type="radio" name="gender" value="여" checked="checked">여
					<%
						}
					%>
					</td>	
				</tr>
				<tr>
					<td colspan="2" align="center">
						<input type="submit" value="입력완료">
					</td>
				</tr>
			</table>
		</form>	
	</div>
