

<%- include("01boardHeader.ejs") %>

<div align="center">

    <h2>게시글 수정</h2>
    
    <form action="updateBoardPro" method="post">
    
        <table border="1">
            <tr>
                <td>번호</td>
                <td ><input type="text" name="no" value="<%= board.boardNo %>" readonly></td>
            </tr>
            <tr>
                <td>작성자</td>
                <td ><input type="text" name="writer" value="<%= board.boardWriter %>" style="background: yellow;"></td>
                
            </tr>
            <tr>
                <td>조회수</td>
                <td><%= board.boardReadCount %></td>
                
            </tr>
            <tr>
                <td>제목</td>
                <td >
                    <input type="text" name="subject" value="<%= board.boardSubject %>" style="background: yellow;">
                </td>
            </tr>
            <tr>
                <td>내용</td>
                <td >
                    <textarea rows="10" cols="30" name="contents" style="background: yellow;"><%= board.boardContent %></textarea>
                </td>
            </tr>
            
            <tr>
                <td colspan="2">
                    <input type="submit" value="수정">
                </td>
            </tr>
        </table>
    
    </form>

</div>
